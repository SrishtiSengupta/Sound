<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sound.example.com.sound.HelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Help Menu"
        android:id="@+id/textView_helpmenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. START SERVICE - This button will start the ambient sound sampling service"
        android:id="@+id/textView_startservice"
        android:layout_below="@+id/textView_helpmenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. STOP SERVICE - This button will stop the ambient sound sampling service"
        android:id="@+id/textView_stopservice"
        android:layout_below="@+id/textView_startservice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. SYNC- This is for manually syncing your recordings to your dropbox folder"
        android:id="@+id/textView_sync"
        android:layout_below="@+id/textView_stopservice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. DELETE - This button will delete the recordings stored in your phone storage. Make sure to delete these recordings from time to time once they are synced to your dropbox folder"
        android:id="@+id/textView_delete"
        android:layout_below="@+id/textView_sync"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5. AUTO SYNC - This button will sync all the recordings at 2:00 PM to your dropbox folder"
        android:id="@+id/textView_autosync"
        android:layout_below="@+id/textView_delete"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6. CANCEL SYNC- This button will cancel the auto syncing"
        android:id="@+id/textView_cancelsync"
        android:layout_below="@+id/textView_autosync"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7. LINK TO DROPBOX - This button will be used to connect your dropbox account to this application"
        android:id="@+id/textView_linktodropbox"
        android:layout_below="@+id/textView_cancelsync"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8. LOGOUT - This button can be used to log out of your dropbox account"
        android:id="@+id/textView_logout"
        android:layout_below="@+id/textView_linktodropbox"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
